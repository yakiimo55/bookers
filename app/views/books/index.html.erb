<h1>Books</h1>

<% @books.each do |book| %>  <%#位置はここで良い%>

<table>
  <thead>
    <tr>
      <th>Title</th>  <th>Body</th>  <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= book.title %></td>  <%#変数を入れてやるので<%=  の形にする%>
      <td><%= book.body %></td>
      <td>Show</td>
      <td>Edit</td>
      <td>Destory</td>
    </tr>
  </tbody>
</table>
<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'create Book' %>  <%#'   'マーク必要。文字列と認識するため%>
<% end %>
  