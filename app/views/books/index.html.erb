<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>  <th>Body</th>  <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>  <%#each文　endの間は繰り返し。%>
    <tr>
      <td><%= book.title %></td>  <%#変数を入れてやるので<%=  の形にする%>
      <td><%= book.body %></td>
      <!--<td>Show</td> --> <%#これをテーブルの中に書かないほうが良い？link書くとエラー%>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %> 
  </tbody>

</table>


<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create Book' %>  <%#'   'マーク必要。文字列と認識するため%>
<% end %>
